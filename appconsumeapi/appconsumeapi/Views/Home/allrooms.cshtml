@using appconsumeapi.Models
@model List<Room>
@{
    ViewBag.Title = "Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .myheader {
        margin: 110px 120px 50px;
    }

        .myheader h2 {
            font-size: 40px;
            font-weight: bold;
            color: #428bb2;
            border-left: 10px solid #428bb2;
            padding: 10px
        }

    .addM {
        margin: 20px auto;
    }

        .addM a {
            width: 200px;
            height: 100%;
            font-size: 18px;
            font-weight: bold;
            font-style: italic;
            color: #428bb2 !important;
        }

            .addM a:hover {
                color: white !important;
                background-color: #428bb2;
            }

    .myContent {
        margin: 30px auto;
    }

    .card {
        height: 550px;
        margin: 10px;
    }

        .card img {
            height: 300px;
        }

        .card h5 {
            font-size: 18px;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            color: #428bb2;
        }

        .card p {
            font-family: Arial;
            font-size: small;
            font-size: 15px;
        }

    .myAvailable span {
        color: green;
        background-color: #e3e3e3;
        padding: 5px;
        border-radius: 10px;
        margin: 5px;
    }

    .myReserved span {
        color: red;
        background-color: #e3e3e3;
        padding: 5px;
        border-radius: 10px;
        margin: 5px;
    }

    .myApprove span {
        color: orange;
        background-color: #e3e3e3;
        padding: 5px;
        border-radius: 10px;
        margin: 5px;
    }
</style>
<div class="myheader">
    <h2>Rooms</h2>
</div>

