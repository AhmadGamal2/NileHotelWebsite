<div class="myContent container section3-bg">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="card m-1">
                    <img src="~/Content/assets/images/@item.photo" alt="" width="100%" style="object-fit:cover" height="150">
                    <div class="card-body">
                        <h5 class="card-title drug_title">Room Number: @item.RID</h5>
                        <p class="card-text drug_details">Branch Name: @item.Branch.BName</p>
                        <p class="card-text drug_details">Room Price: @item.price</p>
                        <p class="card-text drug_details">Number Of Beds: @item.No_Beds</p>
                        <p class="card-text drug_details">Room Status: @item.Status</p>
                    </div>
                    <div class="addM">
                        @if (item.Status == "Reserved")
                        {
                            @Html.ActionLink("Cancel", "editroom", "Home", new { bid = item.BID , rid = item.RID }, new { @class = "btn btn-outline-success m-2"})

                        }
                        else
                        {
                            @Html.ActionLink("Book", "editroom", "Home" , new { bid = item.BID , rid = item.RID }, new { @class = "btn btn-outline-success m-2" })
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>








