@model appconsumeapi.Models.User
@{
    ViewBag.Title = "profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
        body {
            background-color: #1674a6;
            background: linear-gradient(135deg, #1674a6 0%, rgb(0 0 0) 100%);
        }

        .parent {
            padding: 100px;
        }

        .header {
            /*border-left: 30px solid #b0a7a7;*/
            padding: 20px;
            display: flex;
            justify-content: space-evenly;
            flex-wrap: wrap;
        }

            .header img {
                border: 4px double white;
                border-radius: 50%;
                object-fit: cover;
            }

            .header .hd span {
                font-size: 50px;
                font-weight: bold;
                font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
                color: #f1a873;
                margin-left: 40px;
            }

        .line {
            margin-top: 20px;
            /*        width: 20%;
    */ border: 4px solid #b0a7a7;
            background-color: #b0a7a7;
        }

        p {
            font-size: 15px;
            color: white;
            margin: 10px;
        }

        .headercontent span {
            font-size: 20px;
            font-style: italic;
            color: #f1a873;
            font-weight: bold;
        }

        .drugContent {
            margin: 20px;
        }

            .drugContent h2 {
                padding: 10px;
                border-left: 10px solid #b0a7a7;
                font-size: 30px;
                font-weight: bold;
                color: white;
            }

        .drugs {
            margin: 20px
        }

        button {
            margin: auto 44%;
            width: 160px;
        }

        .card {
            margin: 5px;
            border: 3px solid #f1a873;
        }

        .card-body h2 {
            padding: 10px;
            border-left: none;
            font-size: 15px;
            font-weight: bold;
            color: #1674a6;
        }

        .card a {
            margin: 20px auto;
            width: 100px;
        }

        .card p {
            font-family: Arial;
            font-size: small;
            font-size: 15px;
            color: black;
        }

        .myAvailable span {
            color: green;
            background-color: #e3e3e3;
            padding: 5px;
            border-radius: 10px;
            margin: 5px;
        }

        .myReserved span {
            color: red;
            background-color: #e3e3e3;
            padding: 5px;
            border-radius: 10px;
            margin: 5px;
        }

        .myApprove span {
            color: orange;
            background-color: #e3e3e3;
            padding: 5px;
            border-radius: 10px;
            margin: 5px;
        }


        @@media screen and (max-width:1000px) and (min-width: 760px) {
            .parent {
                padding: 100px;
                margin-top: 100px;
            }
        }
</style>

<div class="parent">
    <div class="header">
        <div class="hd">
            @if (Model.UImage != null)
            {
                <td><img src="~/Content/assets/images/@Model.UImage" width="200" height="200" /></td>

            }
            else
            {
                <td><img src="~/Content/assets/images/no-image.jpg" width="200" height="200" /></td>

            }
            <span>@Model.UName</span>
        </div>
        <div class="headercontent">
            <p>Email: <span>@Model.Email</span></p>

            <p>Address: <span>@Model.Street, @Model.City, @Model.Governorate</span></p>
            <p>Phone: <span>@Model.Phone</span></p>
        </div>
    </div>
    <div class="line"></div>
    <div class="drugContent">
        <h2>Rooms That I Have Booked</h2>
        <div class="drugs">
            <div class="container-fluid">
                <div class="row">
                    @foreach (var item in ViewBag.Rooms)
                    {
                        <div class="myCard col-xs-12 col-sm-12 col-md-6 col-lg-4 col-xl-3">
                            <div class="card">
                                <div class="card-body">
                                    <img src="~/Content/assets/images/@item.photo" width="100%" height="200" />
                                    <h2 class="card-title">Branch Name: @item.Branch.BName</h2>
                                    <h2 class="card-title">Room Number: @item.RID</h2>

                                    @Html.ActionLink("Room Details", "RoomDetails", "Home", new { bid = item.BID, rid = item.RID }, new { @class = "btn btn-outline-success m-2" })
                                    @Html.ActionLink("Cancel", "editroom", "Home", new { bid = item.BID, rid = item.RID }, new { @class = "btn btn-outline-success m-2" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>